add_action( 'wp_footer', 'mok_adword_webform', 999 );
add_filter( 'gform_save_field_value', 'replace_text', 10, 3 );
function replace_text( $value, $entry, $field ) {
    if ( $field->get_input_type() == 'textarea' ) {
        $value = preg_replace( '/\s+/', ' ', $value);
    }
    return $value;
}
